<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/atvNewsDesk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/NewsDeskHint"
        android:imeOptions="flagNoExtractUi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/atvName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/NameHint"
        android:imeOptions="flagNoExtractUi"
        android:layout_below="@+id/atvMaterial"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/atvMaterial"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/MaterialHint"
        android:imeOptions="flagNoExtractUi"
        android:layout_below="@+id/atvNewsDesk"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:id="@+id/btnClear"
        android:layout_below="@+id/atvName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:id="@+id/btnOk"
        android:layout_below="@+id/atvName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>